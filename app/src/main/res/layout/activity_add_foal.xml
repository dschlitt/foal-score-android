<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ohio_state.org.vetplus.foalscore.AddFoalActivity"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="top">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_weight="4"
                    android:textSize="16dp"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/field_title1" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/foalName"
                    android:hint="Name"
                    android:singleLine="true"
                    android:layout_weight="6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Age in Hours: "
                    android:ellipsize="marquee"
                    android:layout_weight="4"
                    android:textSize="16dp"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/field_title2" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"
                    android:layout_weight="6"
                    android:id="@+id/foalAge"
                    android:hint="Age in Hours" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Breed: "
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_weight="4"
                    android:textSize="16dp"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/field_title3" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/foalBreed"
                    android:hint="Breed"
                    android:layout_weight="6"
                    android:ems="10"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Temperature: "
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_weight="4"
                    android:textSize="16dp"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/field_title4" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="6"
                    android:id="@+id/foalTemperature"
                    android:hint="Temperature"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Respiratory Rate: "
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_weight="4"
                    android:textSize="16dp"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/field_title5" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="6"
                    android:ems="10"
                    android:id="@+id/foalRespiratoryRate"
                    android:hint="Respiratory Rate"
                    android:layout_marginLeft="4dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Heart Rate: "
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_weight="4"
                    android:textSize="16dp"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/field_title" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="6"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"
                    android:id="@+id/foalHeartRate"
                    android:hint="Heart Rate" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="left">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="Sex: "
                    android:id="@+id/textView11"
                    android:layout_weight="4"
                    android:textSize="16dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/foalSex"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/Sex_Prompt"
                    android:entries="@array/Sex"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="left">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="Dystocia: "
                    android:id="@+id/textView12"
                    android:layout_weight="4"
                    android:textSize="16dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:id="@+id/foalDystocia"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/Dystocia_Prompt"
                    android:entries="@array/Dystocia"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="left">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="Survived until hospital discharge: "
                    android:id="@+id/textView13"
                    android:layout_gravity="fill"
                    android:layout_weight="4"
                    android:textSize="16dp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:id="@+id/foalSurvived"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/Survived_Prompt"
                    android:entries="@array/Survived"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBoxFoal"
                    android:checked="true"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share data with The Ohio State University [?]"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:id="@+id/text"
                    android:ellipsize="marquee"
                    android:layout_marginBottom="5dp"
                    android:textSize="14dp"
                    android:textColor="@color/subscore" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/addFoal"
                android:background="@drawable/custom_button"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
