<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="edu.ohio_state.org.vetplus.foalscore.FoalDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="8dp"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Edit Foal"
                android:background="@drawable/custom_button"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:id="@+id/editFoal" />
            <TextView
                android:id="@+id/foal_name"
                android:text="Name: "
                android:layout_marginBottom="4dp"
                android:textColor="@color/material_blue_grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/foal_age"
                android:text="Age in Hours: "
                android:layout_marginBottom="4dp"
                android:textColor="@color/material_blue_grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/foal_breed"
                android:text="Breed: "
                android:layout_marginBottom="4dp"
                android:textColor="@color/material_blue_grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/foal_temperature"
                android:text="Temperature: "
                android:layout_marginBottom="4dp"
                android:textColor="@color/material_blue_grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/foal_respiratory_rate"
                android:text="Respiratory Rate: "
                android:layout_marginBottom="4dp"
                android:textColor="@color/material_blue_grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/foal_heart_rate"
                android:text="Heart Rate: "
                android:layout_marginBottom="4dp"
                android:textColor="@color/material_blue_grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/foal_gender"
                android:text="Gender: "
                android:layout_marginBottom="4dp"
                android:textColor="@color/material_blue_grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/foal_dystocia"
                android:text="Dystocia: "
                android:layout_marginBottom="4dp"
                android:textColor="@color/material_blue_grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/foal_survived"
                android:text="Survived Until Hospital Discharge: "
                android:layout_marginBottom="4dp"
                android:textColor="@color/material_blue_grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/calculations"
        android:layout_marginBottom="4dp"
        android:textColor="@color/material_blue_grey_800"
        android:text="Score History: "
        android:paddingLeft="16dp"
        android:textSize="@dimen/abc_text_size_subhead_material"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:divider="@color/material_blue_grey_800"
            android:dividerHeight="2px"
            android:id="@+id/calculations_list">
        </ListView>
    </LinearLayout>
</LinearLayout>
